{% doc %}
  @prompt
    Create a hero banner for my store DINVEDA — an Ayurvedic wellness brand. Use a soft beige background (#FFF0DD) and warm primary text color (#C17129).
    On the left side: a heading ‘Wellness Rooted in Ancient Wisdom’, a subheading ‘Organic Ayurvedic blends crafted for modern living’, and two buttons: ‘Explore Blends’ and ‘About DINVEDA’.
    On the right side: leave a placeholder for an image of an animal mascot (I’ll upload later).
    The layout must be responsive (desktop and mobile).
    Use a premium, warm, minimalistic design — natural, clean, earthy feel.
    No external scripts — just a simple banner block.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_desktop }}px 20px;
  }

  .ai-hero-banner__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 60px;
  }

  .ai-hero-banner__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .ai-hero-banner__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
  }

  .ai-hero-banner__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.5;
    color: {{ block.settings.subheading_color }};
    margin: 0;
  }

  .ai-hero-banner__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-banner__button-{{ ai_gen_id }} {
    padding: 14px 32px;
    font-size: {{ block.settings.button_text_size }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    display: inline-block;
    border: none;
    cursor: pointer;
    font-weight: 500;
  }

  .ai-hero-banner__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_color }};
  }

  .ai-hero-banner__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    opacity: 0.9;
  }

  .ai-hero-banner__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.secondary_button_bg }};
    color: {{ block.settings.secondary_button_color }};
    border: 2px solid {{ block.settings.secondary_button_border }};
  }

  .ai-hero-banner__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.secondary_button_hover_bg }};
    border-color: {{ block.settings.secondary_button_hover_border }};
  }

  .ai-hero-banner__image-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-banner__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: 600px;
    position: relative;
  }

  .ai-hero-banner__image-wrapper-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-hero-banner__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f9f5f0;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-hero-banner__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-hero-banner__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: #999;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-hero-banner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px 20px;
    }

    .ai-hero-banner__container-{{ ai_gen_id }} {
      flex-direction: {% if block.settings.mobile_layout == 'image_top' %}column-reverse{% else %}column{% endif %};
      gap: 40px;
    }

    .ai-hero-banner__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-banner__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-banner__buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-banner__button-{{ ai_gen_id }} {
      text-align: center;
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-hero-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-banner__container-{{ ai_gen_id }}">
    <div class="ai-hero-banner__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-banner__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <p class="ai-hero-banner__subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </p>
      {% endif %}

      <div class="ai-hero-banner__buttons-{{ ai_gen_id }}">
        {% if block.settings.primary_button_label != blank %}
          <a
            href="{{ block.settings.primary_button_link }}"
            class="ai-hero-banner__button-{{ ai_gen_id }} ai-hero-banner__button--primary-{{ ai_gen_id }}"
          >
            {{ block.settings.primary_button_label }}
          </a>
        {% endif %}

        {% if block.settings.secondary_button_label != blank %}
          <a
            href="{{ block.settings.secondary_button_link }}"
            class="ai-hero-banner__button-{{ ai_gen_id }} ai-hero-banner__button--secondary-{{ ai_gen_id }}"
          >
            {{ block.settings.secondary_button_label }}
          </a>
        {% endif %}
      </div>
    </div>

    <div class="ai-hero-banner__image-{{ ai_gen_id }}">
      <div class="ai-hero-banner__image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 1200 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-hero-banner__image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-hero-banner__empty-state-{{ ai_gen_id }}">
              Add your animal mascot image
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

