<script>
  (function() {
    class FooterSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAccessibility();
      }

      setupAccessibility() {
        const links = this.querySelectorAll('a[href^="mailto:"], a[href^="tel:"]');
        links.forEach(link => {
          if (!link.getAttribute('aria-label')) {
            if (link.href.startsWith('mailto:')) {
              link.setAttribute('aria-label', 'E-Mail an ' + link.textContent.trim());
            } else if (link.href.startsWith('tel:')) {
              link.setAttribute('aria-label', 'Anrufen ' + link.textContent.trim());
            }
          }
        });
      }
    }

    customElements.define('footer-section-{{ ai_gen_id }}', FooterSection{{ ai_gen_id }});
  })();
</script>

