  }

  .ai-footer-links-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.link_spacing }}px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    font-family: var(--main-family, inherit);
    font-size: {{ block.settings.link_size }}px;
    color: {{ block.settings.text_color }};
    opacity: {{ block.settings.link_opacity | divided_by: 100.0 }};
    text-decoration: none;
    transition: opacity 0.3s ease, text-decoration 0.3s ease;
    line-height: 1.5;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    opacity: 1;
    text-decoration: {{ block.settings.link_hover_style }};
  }

  .ai-footer-contact-item-{{ ai_gen_id }} {
    margin-bottom: {{ block.settings.contact_item_spacing }}px;
  }

