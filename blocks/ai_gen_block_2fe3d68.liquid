    margin-bottom: 0;
  }

  .ai-footer-contact-label-{{ ai_gen_id }} {
    font-family: var(--main-family, inherit);
    font-size: {{ block.settings.contact_label_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
