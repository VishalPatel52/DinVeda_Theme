{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 30% 20% 20% 30%;
    gap: 40px;
    margin-bottom: {{ block.settings.bottom_bar_spacing }}px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-footer-brand-name-{{ ai_gen_id }} {
    font-family: var(--heading-family, inherit);
    font-size: {{ block.settings.brand_name_size }}px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
    line-height: 1.2;
  }

  .ai-footer-cert-badge-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_bg_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    padding: {{ block.settings.badge_padding }}px;
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 20px;
  }

  .ai-footer-cert-logo-{{ ai_gen_id }} {
    width: {{ block.settings.cert_logo_size }}px;
    height: {{ block.settings.cert_logo_size }}px;
    flex-shrink: 0;
    object-fit: contain;
  }

  .ai-footer-cert-text-{{ ai_gen_id }} {
    font-family: var(--main-family, inherit);
    font-size: {{ block.settings.cert_text_size }}px;
    font-weight: 500;
    color: {{ block.settings.badge_text_color }};
    line-height: 1.4;
  }

  .ai-footer-description-{{ ai_gen_id }} {
