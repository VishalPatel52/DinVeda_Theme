{% comment %}
  DinVeda Recipe Cards Section (DV Template)
  "Usage Rituals" - Refined grid of recipe-style cards (Golden Milk, Morning Mix, etc.)
  
  Content Source (Hybrid Pattern):
  - Priority: product.metafields.custom.dv_recipe_cards (list of DV Recipe Card metaobjects)
  - Fallback: Blocks in section schema (4 recipe card blocks)
  
  Each recipe card requires: icon (Material Symbols name), title, body
{% endcomment %}

{%- liquid
  # Read section heading (can be connected to metafield via dynamic source)
  assign section_heading = section.settings.heading | default: 'Dein t√§gliches Ritual'
  
  # Recipe cards from metaobject list (product metafield)
  assign recipe_cards_meta = null
  assign has_recipe_cards_meta = false
  if product.metafields.custom.dv_recipe_cards
    assign recipe_cards_meta = product.metafields.custom.dv_recipe_cards.value
    if recipe_cards_meta and recipe_cards_meta.size > 0
      assign has_recipe_cards_meta = true
    endif
  endif
  
  # Check for recipe card blocks (fallback)
  assign has_recipe_blocks = false
  if section.blocks.size > 0
    for block in section.blocks
      if block.type == 'recipe_card'
        assign has_recipe_blocks = true
        break
      endif
    endfor
  endif
  
  # Check if we have content to show
  assign has_content = false
  if has_recipe_cards_meta or has_recipe_blocks or section.settings.show_when_empty
    assign has_content = true
  endif
-%}

{% if has_content %}
<section
  id="dv-recipe-cards-{{ section.id }}"
  class="dv-recipe-cards"
  data-section-id="{{ section.id }}"
  data-section-type="dv-recipe-cards"
>
  {% style %}
    #dv-recipe-cards-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: var(--dv-bg-beige);
    }
  {% endstyle %}
  
  <div class="dv-recipe-cards__container">
    {%- comment -%} Section Heading (Centered, Italic, Editorial) {%- endcomment -%}
    {% if section_heading != blank %}
      <h2 class="dv-recipe-cards__heading">
        {{ section_heading | escape }}
      </h2>
    {% endif %}
    
    {%- comment -%} Recipe Cards Grid (4-card horizontal row on desktop, responsive on smaller screens) {%- endcomment -%}
    <div class="dv-recipe-cards__grid">
      {%- comment -%} Priority: MetaObjects {%- endcomment -%}
      {% if has_recipe_cards_meta %}
        {% for recipe_card in recipe_cards_meta %}
          <div class="dv-recipe-cards__card">
            {%- comment -%} Card Icon {%- endcomment -%}
            {% if recipe_card.icon != blank %}
              <div class="dv-recipe-cards__card-icon">
                <span class="material-symbols-outlined">{{ recipe_card.icon.value | default: recipe_card.icon | escape }}</span>
              </div>
            {% endif %}
            {%- comment -%} Card Title {%- endcomment -%}
            {% if recipe_card.title != blank %}
              <h3 class="dv-recipe-cards__card-title">
                {{ recipe_card.title.value | default: recipe_card.title | escape }}
              </h3>
            {% endif %}
            
            {%- comment -%} Card Description (flex layout with usage instruction) {%- endcomment -%}
            <div class="dv-recipe-cards__card-content">
              {%- liquid
                # Determine which metafield to use (body is primary, description is fallback)
                assign has_body = false
                assign has_description = false
                if recipe_card.body != blank
                  assign has_body = true
                elsif recipe_card.description != blank
                  assign has_description = true
                endif
                
                # Check if we need to parse (extract usage instruction from body/description)
                assign needs_parsing = false
                assign usage_instruction_extracted = blank
                if recipe_card.usage_instruction == blank and recipe_card.usage_instruction.value == blank
                  if has_body and recipe_card.body.value != blank
                    if recipe_card.body.value contains '||'
                      assign needs_parsing = true
                      assign desc_parts = recipe_card.body.value | split: '||'
                      if desc_parts.size > 1
                        assign usage_instruction_extracted = desc_parts[1] | strip
                      endif
                    endif
                  elsif has_description and recipe_card.description.value != blank
                    if recipe_card.description.value contains '||'
                      assign needs_parsing = true
                      assign desc_parts = recipe_card.description.value | split: '||'
                      if desc_parts.size > 1
                        assign usage_instruction_extracted = desc_parts[1] | strip
                      endif
                    endif
                  endif
                endif
              -%}
              
              {% if has_body or has_description %}
                <div class="dv-recipe-cards__card-description rte">
                  {% if needs_parsing %}
                    {%- comment -%} Output parsed HTML string directly (rich text already outputs HTML) {%- endcomment -%}
                    {% if has_body %}
                      {% assign desc_parts = recipe_card.body.value | split: '||' %}
                      {{ desc_parts[0] }}
                    {% elsif has_description %}
                      {% assign desc_parts = recipe_card.description.value | split: '||' %}
                      {{ desc_parts[0] }}
                    {% endif %}
                  {% else %}
                    {%- comment -%} Use metafield_tag on original metafield drop (not .value) {%- endcomment -%}
                    {% if has_body %}
                      {{ recipe_card.body | metafield_tag }}
                    {% elsif has_description %}
                      {{ recipe_card.description | metafield_tag }}
                    {% endif %}
                  {% endif %}
                </div>
              {% endif %}
              {%- comment -%} Usage Instruction (at bottom, uppercase, bold) {%- endcomment -%}
              {%- liquid
                assign usage_instruction = recipe_card.usage_instruction.value | default: recipe_card.usage_instruction
                if usage_instruction == blank and usage_instruction_extracted != blank
                  assign usage_instruction = usage_instruction_extracted
                endif
              -%}
              {% if usage_instruction != blank %}
                <div class="dv-recipe-cards__card-instruction">
                  {{ usage_instruction | upcase | escape }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      {%- comment -%} Fallback: Blocks {%- endcomment -%}
      {% elsif has_recipe_blocks %}
        {% for block in section.blocks %}
          {% if block.type == 'recipe_card' %}
            {%- liquid
              assign block_icon = block.settings.icon
              assign block_title = block.settings.title
              assign block_description = block.settings.description
              assign block_usage_instruction = block.settings.usage_instruction
            -%}
            <div class="dv-recipe-cards__card" {{ block.shopify_attributes }}>
              {%- comment -%} Card Icon {%- endcomment -%}
              {% if block_icon != blank %}
                <div class="dv-recipe-cards__card-icon">
                  <span class="material-symbols-outlined">{{ block_icon | escape }}</span>
                </div>
              {% endif %}
              {%- comment -%} Card Title {%- endcomment -%}
              {% if block_title != blank %}
                <h3 class="dv-recipe-cards__card-title">
                  {{ block_title | escape }}
                </h3>
              {% endif %}
              
              {%- comment -%} Card Description (flex layout with usage instruction) {%- endcomment -%}
              <div class="dv-recipe-cards__card-content">
                {% if block_description != blank %}
                  <div class="dv-recipe-cards__card-description rte">
                    {{ block_description }}
                  </div>
                {% endif %}
                {%- comment -%} Usage Instruction (at bottom, uppercase, bold) {%- endcomment -%}
                {% if block_usage_instruction != blank %}
                  <div class="dv-recipe-cards__card-instruction">
                    {{ block_usage_instruction | upcase | escape }}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>
{% endif %}

