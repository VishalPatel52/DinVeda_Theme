{% comment %} DinVeda Collection Filter Tabs - Simple horizontal filter tabs {% endcomment %}
{%- liquid
  assign current_filter = ''
  if request.url contains '?filter='
    assign url_parts = request.url | split: '?filter='
    if url_parts.size > 1
      assign current_filter = url_parts[1] | split: '&' | first | split: '#' | first
    endif
  endif
-%}

<section
  class="dinveda-collection-filter-tabs dinveda-collection-filter-tabs-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="collection-filter-tabs"
>
  <div class="dinveda-collection-filter-tabs__container">
    <div class="dinveda-collection-filter-tabs__tabs">
      <a
        href="{{ collection.url }}"
        class="dinveda-collection-filter-tabs__tab{% if current_filter == blank or current_filter == '' %} dinveda-collection-filter-tabs__tab--active{% endif %}"
      >
        {{ section.settings.tab_all_label | default: 'All Rituals' }}
      </a>
      <a
        href="{{ collection.url }}?filter=Morgen"
        class="dinveda-collection-filter-tabs__tab{% if current_filter == 'Morgen' %} dinveda-collection-filter-tabs__tab--active{% endif %}"
      >
        {{ section.settings.tab_morning_label | default: 'Morning' }}
      </a>
      <a
        href="{{ collection.url }}?filter=Tag"
        class="dinveda-collection-filter-tabs__tab{% if current_filter == 'Tag' %} dinveda-collection-filter-tabs__tab--active{% endif %}"
      >
        {{ section.settings.tab_focus_label | default: 'Focus' }}
      </a>
      <a
        href="{{ collection.url }}?filter=Abend"
        class="dinveda-collection-filter-tabs__tab{% if current_filter == 'Abend' %} dinveda-collection-filter-tabs__tab--active{% endif %}"
      >
        {{ section.settings.tab_sleep_label | default: 'Sleep' }}
      </a>
    </div>
  </div>
</section>

{% style %}
  .dinveda-collection-filter-tabs-{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: var(--design-bg-color, #FFF0DD);
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tabs {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tab {
    font-family: var(--main-family);
    font-size: 1rem;
    font-weight: 400;
    color: var(--design-text-color, #C17129);
    text-decoration: none;
    padding: 0.5rem 0;
    position: relative;
    transition: all 0.2s ease;
    background: none;
    border: none;
    cursor: pointer;
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tab:hover {
    opacity: 0.7;
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tab--active {
    font-weight: 500;
  }

  .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tab--active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--design-text-color, #C17129);
  }

  @media (max-width: 767px) {
    .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__container {
      padding: 0 1rem;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tabs {
      justify-content: flex-start;
      gap: 1.5rem;
      min-width: max-content;
    }

    .dinveda-collection-filter-tabs-{{ section.id }} .dinveda-collection-filter-tabs__tab {
      font-size: 0.9rem;
      white-space: nowrap;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Collection Filter Tabs",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "text",
      "id": "tab_all_label",
      "label": "All Rituals tab label",
      "default": "All Rituals"
    },
    {
      "type": "text",
      "id": "tab_morning_label",
      "label": "Morning tab label",
      "default": "Morning"
    },
    {
      "type": "text",
      "id": "tab_focus_label",
      "label": "Focus tab label",
      "default": "Focus"
    },
    {
      "type": "text",
      "id": "tab_sleep_label",
      "label": "Sleep tab label",
      "default": "Sleep"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 96,
      "step": 8,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 96,
      "step": 8,
      "unit": "px",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "Collection Filter Tabs"
    }
  ]
}
{% endschema %}
