            <span class="dv-footer__contact-label" style="font-size: {{ section.settings.contact_label_size }}px;">Telefon</span>
            <div class="dv-footer__contact-value" style="font-size: {{ section.settings.contact_value_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
              <a href="tel:{{ section.settings.contact_phone | replace: ' ', '' }}" aria-label="Anrufen {{ section.settings.contact_phone }}">
