            <span class="dv-footer__contact-label" style="font-size: {{ section.settings.contact_label_size }}px;">E-Mail</span>
            <div class="dv-footer__contact-value" style="font-size: {{ section.settings.contact_value_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
              <a href="mailto:{{ section.settings.contact_email }}" aria-label="E-Mail an {{ section.settings.contact_email }}">
                {{ section.settings.contact_email }}
              </a>
            </div>
          </div>
        {% endif %}

        {% if section.settings.contact_phone != blank %}
