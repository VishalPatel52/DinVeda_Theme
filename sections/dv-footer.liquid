{% comment %} DV_Footer Assets {% endcomment %}
<link rel="preload" href="{{ 'section-dv-footer.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="{{ 'section-dv-footer.css' | asset_url }}"></noscript>

{% comment %} DV_Footer Logic {% endcomment %}
{%- liquid
  assign section_id = section.id | replace: '_', '' | downcase
  
  comment
    Theme variable integration with fallbacks
  endcomment
  if section.settings.use_theme_colors
    assign footer_bg = 'var(--design-bg-color)'
    assign footer_text = 'var(--design-text-color)'
  else
    assign footer_bg = section.settings.background_color
    assign footer_text = section.settings.text_color
  endif
  
  assign badge_bg = section.settings.badge_bg_color | default: 'var(--design-accent-color)'
  assign badge_text = section.settings.badge_text_color | default: '#ffffff'
  assign border_color = section.settings.bottom_bar_border_color | default: 'var(--design-accent-color)'
  
  comment
    Use theme spacing if enabled, otherwise use custom
  endcomment
  if section.settings.use_theme_spacing
    assign padding_top = 'var(--design-section-spacing-medium)'
    assign padding_bottom = 'var(--design-section-spacing-medium)'
  else
    assign padding_top = section.settings.padding_top | append: 'px'
    assign padding_bottom = section.settings.padding_bottom | append: 'px'
  endif
-%}

{% comment %} DV_Footer Template {% endcomment %}
<footer
  class="dv-footer"
  data-section-id="{{ section.id }}"
  data-section-type="dv-footer"
  style="background-color: {{ footer_bg }}; color: {{ footer_text }}; padding-top: {{ padding_top }}; padding-bottom: {{ padding_bottom }};"
  {{ section.shopify_attributes }}>
  
  <div class="dv-footer__container" style="max-width: {{ section.settings.container_width }}px;">
    <div class="dv-footer__grid" style="margin-bottom: {{ section.settings.bottom_bar_spacing }}px;">
      
      {% comment %} Column 1: Branding & Description {% endcomment %}
      <div class="dv-footer__column">
        {% if section.settings.brand_name != blank %}
          <h2 class="dv-footer__brand-name" style="font-size: {{ section.settings.brand_name_size }}px;">
            {{ section.settings.brand_name }}
          </h2>
        {% endif %}

        {% if section.settings.show_cert_badge %}
          <div class="dv-footer__cert-badge" style="background-color: {{ badge_bg }}; border-radius: {{ section.settings.badge_border_radius }}px; padding: {{ section.settings.badge_padding }}px;">
            {% if section.settings.cert_logo != blank %}
              <img
                src="{{ section.settings.cert_logo | image_url: width: 120 }}"
                alt="EU Bio Logo"
                class="dv-footer__cert-logo"
                style="width: {{ section.settings.cert_logo_size }}px; height: {{ section.settings.cert_logo_size }}px; max-width: {{ section.settings.cert_logo_size }}px; max-height: {{ section.settings.cert_logo_size }}px;"
                width="{{ section.settings.cert_logo_size }}"
                height="{{ section.settings.cert_logo_size }}"
                loading="lazy"
              >
            {% else %}
              <div class="dv-footer__cert-logo" style="background-color: rgba(255,255,255,0.2); border-radius: 4px; width: {{ section.settings.cert_logo_size }}px; height: {{ section.settings.cert_logo_size }}px; max-width: {{ section.settings.cert_logo_size }}px; max-height: {{ section.settings.cert_logo_size }}px;"></div>
            {% endif %}
            <div class="dv-footer__cert-text" style="font-size: {{ section.settings.cert_text_size }}px; color: {{ badge_text }};">
              {{ section.settings.cert_text }}
            </div>
          </div>
        {% endif %}

        {% if section.settings.description != blank %}
          <div class="dv-footer__description" style="font-size: {{ section.settings.description_size }}px; opacity: {{ section.settings.description_opacity | divided_by: 100.0 }};">
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>

      {% comment %} Column 2: Navigation {% endcomment %}
      <div class="dv-footer__column">
        {% if section.settings.nav_heading != blank %}
          <h3 class="dv-footer__heading" style="font-size: {{ section.settings.column_heading_size }}px; margin-bottom: {{ section.settings.heading_margin_bottom }}px;">
            {{ section.settings.nav_heading }}
          </h3>
        {% endif %}
        <ul class="dv-footer__links" style="gap: {{ section.settings.link_spacing }}px;">
          {% if section.settings.nav_link_1_text != blank %}
            <li>
              <a href="{{ section.settings.nav_link_1_url }}" class="dv-footer__link" style="font-size: {{ section.settings.link_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
                {{ section.settings.nav_link_1_text }}
              </a>
            </li>
          {% endif %}
          {% if section.settings.nav_link_2_text != blank %}
            <li>
              <a href="{{ section.settings.nav_link_2_url }}" class="dv-footer__link" style="font-size: {{ section.settings.link_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
                {{ section.settings.nav_link_2_text }}
              </a>
            </li>
          {% endif %}
          {% if section.settings.nav_link_3_text != blank %}
            <li>
              <a href="{{ section.settings.nav_link_3_url }}" class="dv-footer__link" style="font-size: {{ section.settings.link_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
                {{ section.settings.nav_link_3_text }}
              </a>
            </li>
          {% endif %}
          {% if section.settings.nav_link_4_text != blank %}
            <li>
              <a href="{{ section.settings.nav_link_4_url }}" class="dv-footer__link" style="font-size: {{ section.settings.link_size }}px; opacity: {{ section.settings.link_opacity | divided_by: 100.0 }};">
                {{ section.settings.nav_link_4_text }}
