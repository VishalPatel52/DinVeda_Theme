{% comment %}
  DinVeda Complete Your Day - Related rituals section with 3 product cards
{% endcomment %}

<section
  id="dinveda-complete-your-day-{{ section.id }}"
  class="dinveda-complete-your-day"
  data-section-id="{{ section.id }}"
  data-section-type="dinveda-complete-your-day"
>
  <div class="dinveda-complete-your-day__container">
    
    {% if section.settings.heading != blank %}
      <div class="dinveda-complete-your-day__header">
        <div class="dinveda-complete-your-day__header-left">
          <h2 class="dinveda-complete-your-day__title">{{ section.settings.heading | escape }}</h2>
          {% if section.settings.subheading != blank %}
            <p class="dinveda-complete-your-day__subtitle">{{ section.settings.subheading | escape }}</p>
          {% endif %}
        </div>
        {% if section.settings.view_all_link != blank %}
          <a href="{{ section.settings.view_all_link }}" class="dinveda-complete-your-day__view-all">
            {{ section.settings.view_all_label | default: 'Alle Rituale ansehen' }}
          </a>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="dinveda-complete-your-day__grid">
        {% for block in section.blocks %}
          {% if block.type == 'product_card' %}
            {%- liquid
              assign card_product = block.settings.product
              assign card_image = block.settings.image
              assign card_link = block.settings.link
              assign card_title = block.settings.title
              assign card_label = block.settings.label
              assign card_benefit = block.settings.benefit
              
              if card_product != blank
                assign card_link = card_product.url
                unless card_image != blank
                  assign card_image = card_product.featured_image
                endunless
                unless card_title != blank
                  assign card_title = card_product.title
                endunless
                unless card_label != blank
                  assign card_label = card_product.metafields.dinveda.ritual_timing | default: card_product.metafields.dinveda.tageszeit
                endunless
                unless card_benefit != blank
                  assign card_benefit = card_product.metafields.dinveda.ritual_tagline | default: card_product.description | strip_html | truncate: 80
                endunless
              endif
            -%}
            
            <article class="dinveda-complete-your-day__card" {{ block.shopify_attributes }}>
              {% if card_link != blank %}
                <a href="{{ card_link }}" class="dinveda-complete-your-day__card-link">
              {% endif %}
              
              <div class="dinveda-complete-your-day__card-inner">
                
                {%- comment -%} Image {%- endcomment -%}
                {% if card_image != blank %}
                  <div class="dinveda-complete-your-day__image-wrapper">
                    {{ card_image | image_url: width: 400 | image_tag: alt: card_image.alt | default: card_title, loading: 'lazy', class: 'dinveda-complete-your-day__image' }}
                  </div>
                {% else %}
                  <div class="dinveda-complete-your-day__image-wrapper dinveda-complete-your-day__placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}

                {%- comment -%} Content {%- endcomment -%}
                <div class="dinveda-complete-your-day__content">
                  {% if card_label != blank %}
                    <p class="dinveda-complete-your-day__label">{{ card_label | escape }}</p>
                  {% endif %}
                  
                  {% if card_title != blank %}
                    <h3 class="dinveda-complete-your-day__card-title">{{ card_title | escape }}</h3>
                  {% endif %}
                  
                  {% if card_benefit != blank %}
                    <p class="dinveda-complete-your-day__benefit">{{ card_benefit | escape }}</p>
                  {% endif %}
                  
                  <div class="dinveda-complete-your-day__button-wrapper">
                    <span class="dinveda-complete-your-day__button">
                      {{ block.settings.button_label | default: section.settings.button_label | default: 'ANSEHEN' }}
                    </span>
                  </div>
                </div>

              </div>

              {% if card_link != blank %}
                </a>
              {% endif %}
            </article>

          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      {%- comment -%} Fallback: Show message or use collection {%- endcomment -%}
      {% if section.settings.fallback_collection != blank %}
        {% assign fallback_collection = collections[section.settings.fallback_collection] %}
        {% if fallback_collection.products.size > 0 %}
          <div class="dinveda-complete-your-day__grid">
            {% for recommendation in fallback_collection.products limit: 3 %}
              {% unless recommendation.id == product.id %}
                <article class="dinveda-complete-your-day__card">
                  <a href="{{ recommendation.url }}" class="dinveda-complete-your-day__card-link">
                    <div class="dinveda-complete-your-day__card-inner">
                      
                      {%- comment -%} Image {%- endcomment -%}
                      {% if recommendation.featured_image != blank %}
                        <div class="dinveda-complete-your-day__image-wrapper">
                          {{ recommendation.featured_image | image_url: width: 400 | image_tag: alt: recommendation.title, loading: 'lazy', class: 'dinveda-complete-your-day__image' }}
                        </div>
                      {% else %}
                        <div class="dinveda-complete-your-day__image-wrapper dinveda-complete-your-day__placeholder">
                          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        </div>
                      {% endif %}

                      {%- comment -%} Content {%- endcomment -%}
                      <div class="dinveda-complete-your-day__content">
                        {%- liquid
                          assign rec_phase_label = recommendation.metafields.dinveda.phase_label | default: recommendation.metafields.dinveda.ritual_timing_label
                        -%}
                        {% if rec_phase_label != blank %}
                          <p class="dinveda-complete-your-day__label">{{ rec_phase_label | escape }}</p>
                        {% endif %}
                        
                        <h3 class="dinveda-complete-your-day__card-title">{{ recommendation.title | escape }}</h3>
                        
                        {%- liquid
                          assign rec_benefit = recommendation.metafields.dinveda.blend_story_short | default: recommendation.description | truncate: 80
                        -%}
                        {% if rec_benefit != blank %}
                          <p class="dinveda-complete-your-day__benefit">{{ rec_benefit | escape }}</p>
                        {% endif %}
                        
                        <div class="dinveda-complete-your-day__button-wrapper">
                          <span class="dinveda-complete-your-day__button">
                            {{ section.settings.button_label_fallback | default: 'ANSEHEN' }}
                          </span>
                        </div>
                      </div>

                    </div>
                  </a>
                </article>
              {% endunless %}
            {% endfor %}
          </div>
        {% endif %}
      {% endif %}
    {% endif %}

  </div>
</section>

{% style %}
  #dinveda-complete-your-day-{{ section.id }} {
    background-color: var(--design-bg-color, #FFF0DD);
  }
{% endstyle %}

{% schema %}
{
  "name": "DinVeda Complete Your Day",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "info": "Optional heading for related products section"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "info": "Optional subheading text"
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "View all link label",
      "info": "Optional label for view all link"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View all link",
      "info": "Optional link to view all products"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label (default)",
      "info": "Default button label used if block doesn't specify one"
    },
    {
      "type": "collection",
      "id": "fallback_collection",
      "label": "Fallback collection",
      "info": "Used if no blocks are added. Shows products from this collection."
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "limit": 3,
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product",
          "info": "Select a product to display. Product title, image, and metafields will be used automatically."
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom Image",
          "info": "Optional: Override product featured image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Custom Link",
          "info": "Optional: Override product URL"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label (Phase)",
          "info": "Optional: Override phase label. If empty, uses product.metafields.dinveda.ritual_timing"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "info": "Optional: Override product title"
        },
        {
          "type": "text",
          "id": "benefit",
          "label": "Benefit Text",
          "info": "Optional: Override benefit text. If empty, uses product.metafields.dinveda.ritual_tagline or description"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button Label",
          "default": "ANSEHEN",
          "info": "Override button text. Falls back to section setting if empty."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DinVeda Complete Your Day"
    }
  ]
}
{% endschema %}

