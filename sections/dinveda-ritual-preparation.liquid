{% comment %}
  DinVeda Ritual Preparation Section
  Two-card layout showing different preparation methods
{% endcomment %}

{%- liquid
  assign preparation_methods = product.metafields.dinveda.preparation_methods
-%}

<section
  id="dinveda-ritual-preparation-{{ section.id }}"
  class="dinveda-ritual-preparation"
  data-section-id="{{ section.id }}"
  data-section-type="dinveda-ritual-preparation"
>
  <div class="dinveda-ritual-preparation__container">
    {% if section.settings.heading != blank %}
      <div class="dinveda-ritual-preparation__header">
        <span class="material-symbols-outlined dinveda-ritual-preparation__header-icon">restaurant</span>
        <h2 class="dinveda-ritual-preparation__heading">{{ section.settings.heading | escape }}</h2>
      </div>
    {% endif %}

    <div class="dinveda-ritual-preparation__grid">
      {%- comment -%} Render blocks (preparation methods) {%- endcomment -%}
      {% for block in section.blocks limit: 2 %}
        {% if block.type == 'preparation_method' %}
          <div class="dinveda-ritual-preparation__card" {{ block.shopify_attributes }}>
            <h3 class="dinveda-ritual-preparation__card-title">{{ block.settings.title | escape }}</h3>
            {% if block.settings.instructions != blank %}
              <p class="dinveda-ritual-preparation__card-instructions">{{ block.settings.instructions | escape }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% style %}
  #dinveda-ritual-preparation-{{ section.id }} {
    background-color: var(--design-bg-color, #FFF0DD);
  }
{% endstyle %}

{% schema %}
{
  "name": "DinVeda Preparation",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section heading",
      "default": "Anwendung & Zubereitung"
    }
  ],
  "blocks": [
    {
      "type": "preparation_method",
      "name": "Preparation Method",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Method title",
          "default": "Sanfter Tee- oder Drink-Moment"
        },
        {
          "type": "textarea",
          "id": "instructions",
          "label": "Instructions",
          "default": "1 TL (≈ 3 g) in 200 ml warme Pflanzenmilch, Kräutertee oder Wasser einrühren – nach Wunsch leicht süßen."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DinVeda Preparation",
      "blocks": [
        {
          "type": "preparation_method",
          "settings": {
            "title": "Sanfter Tee- oder Drink-Moment",
            "instructions": "1 TL (≈ 3 g) in 200 ml warme Pflanzenmilch, Kräutertee oder Wasser einrühren – nach Wunsch leicht süßen."
          }
        },
        {
          "type": "preparation_method",
          "settings": {
            "title": "Abendritual",
            "instructions": "1 TL in warmem Wasser mit etwas Zitrone & Honig – als zarter, harmonischer Ausklang des Tages."
          }
        }
      ]
    }
  ]
}
{% endschema %}

