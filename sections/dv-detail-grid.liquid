{% comment %}
  DinVeda Detail Grid Section (DV Template)
  "Dein Ritual im Detail" - two-column layout redesigned
  Left: Tradition in der Ayurveda-Küche
  Right: Zutaten & Fakten
  
  Metafields Used:
  - custom.dv_detail_left_title: Left column title
  - custom.dv_detail_left_body: Left column intro text
  - custom.dv_facts_title: Right column title (DV Facts Title)
  - custom.dv_first_ingredients: Ingredients list with organic marking
  - custom.dv_allergens_notes: Allergens & Notes content
{% endcomment %}

{%- liquid
  # Layout configuration
  assign layout_mode = section.settings.layout_mode | default: 'both'
  
  # Left Column - Tradition
  assign tradition_title = product.metafields.custom.dv_detail_left_title
  if tradition_title == blank
    assign tradition_title = section.settings.tradition_title
  endif
  
  # Left column intro text
  assign tradition_body_metafield = product.metafields.custom.dv_detail_left_body
  
  # Right Column - Facts
  assign facts_title = product.metafields.custom.dv_facts_title
  if facts_title == blank
    assign facts_title = section.settings.facts_title
  endif
  
  # First Ingredients (ZUTATEN)
  assign first_ingredients_metafield = product.metafields.custom.dv_first_ingredients
  
  # Organic note text
  assign organic_note = section.settings.organic_note | default: '*aus kontrolliert biologischem Anbau'
  
  # Allergens & Notes
  assign allergens_notes_metafield = product.metafields.custom.dv_allergens_notes
  
  # Check for ingredient items and trust badges (blocks)
  assign has_ingredient_items = false
  assign has_trust_badges = false
  if section.blocks.size > 0
    for block in section.blocks
      if block.type == 'ingredient_item'
        assign has_ingredient_items = true
      elsif block.type == 'trust_badge'
        assign has_trust_badges = true
      endif
    endfor
  endif
  
  # Determine which columns to show
  assign show_left = false
  assign show_right = false
  if layout_mode == 'both' or layout_mode == 'left'
    if tradition_title != blank or tradition_body_metafield != blank or section.settings.tradition_body != blank or has_ingredient_items
      assign show_left = true
    endif
  endif
  if layout_mode == 'both' or layout_mode == 'right'
    if facts_title != blank or first_ingredients_metafield != blank or allergens_notes_metafield != blank or section.settings.allergens_notes != blank or has_trust_badges
      assign show_right = true
    endif
  endif
  
  # Check if we have content to show
  assign has_content = false
  if tradition_title != blank or tradition_body_metafield != blank or section.settings.tradition_body != blank or facts_title != blank or first_ingredients_metafield != blank or allergens_notes_metafield != blank or section.settings.allergens_notes != blank or has_ingredient_items or has_trust_badges
    assign has_content = true
  endif
-%}

{% if has_content or section.settings.show_when_empty %}
<section
  id="dv-detail-grid-{{ section.id }}"
  class="dv-detail-grid"
  data-section-id="{{ section.id }}"
  data-section-type="dv-detail-grid"
  data-layout-mode="{{ layout_mode }}"
>
  {% style %}
    #dv-detail-grid-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    
    {% if layout_mode == 'left' %}
      #dv-detail-grid-{{ section.id }} .dv-detail-grid__layout {
        grid-template-columns: 1fr;
      }
    {% elsif layout_mode == 'right' %}
      #dv-detail-grid-{{ section.id }} .dv-detail-grid__layout {
        grid-template-columns: 1fr;
      }
    {% endif %}
  {% endstyle %}
  
  <div class="dv-detail-grid__container">
    {%- comment -%} Section Heading {%- endcomment -%}
    {% if section.settings.section_heading != blank %}
      <div class="dv-detail-grid__section-heading-wrapper">
        <h2 class="dv-detail-grid__section-heading">{{ section.settings.section_heading | escape }}</h2>
      </div>
    {% endif %}
    
    <div class="dv-detail-grid__layout">
      
      {%- comment -%} Left Column: Tradition in der Ayurveda-Küche {%- endcomment -%}
      {% if show_left %}
      <div class="dv-detail-grid__column dv-detail-grid__column--left">
        <div class="dv-detail-grid__card">
          {%- comment -%} Title with icon {%- endcomment -%}
          {% if tradition_title != blank %}
            <div class="dv-detail-grid__tradition-header">
              {% if section.settings.tradition_icon != blank %}
                <div class="dv-detail-grid__tradition-icon">
                  {{ section.settings.tradition_icon | image_url: width: 32 | image_tag: alt: tradition_title, loading: 'lazy', width: 32, height: 32 }}
                </div>
              {% endif %}
              <h2 class="dv-detail-grid__tradition-title">
                {{ tradition_title | escape }}
              </h2>
            </div>
          {% endif %}
          
          {%- comment -%} Introductory text {%- endcomment -%}
          {% if tradition_body_metafield != blank %}
            <div class="dv-detail-grid__tradition-intro rte">
              {{ tradition_body_metafield | metafield_tag }}
            </div>
          {% elsif section.settings.tradition_body != blank %}
            <div class="dv-detail-grid__tradition-intro rte">
              {{ section.settings.tradition_body }}
            </div>
          {% endif %}
          
          {%- comment -%} Ingredient Items (blocks) {%- endcomment -%}
          {% if has_ingredient_items %}
            <div class="dv-detail-grid__ingredient-highlights">
              {% for block in section.blocks %}
                {% if block.type == 'ingredient_item' %}
                  <div class="dv-detail-grid__ingredient-highlight" {{ block.shopify_attributes }}>
                    {% if block.settings.icon != blank %}
                      <div class="dv-detail-grid__ingredient-highlight-icon">
                        {{ block.settings.icon | image_url: width: 32 | image_tag: alt: block.settings.name, loading: 'lazy', width: 32, height: 32 }}
                      </div>
                    {% endif %}
                    <div class="dv-detail-grid__ingredient-highlight-content">
                      {% if block.settings.name != blank %}
                        <strong class="dv-detail-grid__ingredient-highlight-name">{{ block.settings.name | escape }}</strong>
                      {% endif %}
                      {% if block.settings.description != blank %}
                        <p class="dv-detail-grid__ingredient-highlight-desc">{{ block.settings.description | escape }}</p>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
      {% endif %}
      
      {%- comment -%} Right Column: Zutaten & Fakten {%- endcomment -%}
      {% if show_right %}
      <div class="dv-detail-grid__column dv-detail-grid__column--right">
        <div class="dv-detail-grid__card">
          {%- comment -%} Title with icon {%- endcomment -%}
          {% if facts_title != blank %}
            <div class="dv-detail-grid__facts-header">
              {% if section.settings.facts_icon != blank %}
                <div class="dv-detail-grid__facts-icon">
                  {{ section.settings.facts_icon | image_url: width: 32 | image_tag: alt: facts_title, loading: 'lazy', width: 32, height: 32 }}
                </div>
              {% endif %}
              <h2 class="dv-detail-grid__facts-title">
                {{ facts_title | escape }}
              </h2>
            </div>
          {% endif %}
          
          {%- comment -%} ZUTATEN Section {%- endcomment -%}
          {% if first_ingredients_metafield != blank %}
            <div class="dv-detail-grid__zutaten-section">
              <h3 class="dv-detail-grid__zutaten-title">Zutaten</h3>
              <div class="dv-detail-grid__zutaten-content rte">
                {{ first_ingredients_metafield | metafield_tag }}
              </div>
              {% if organic_note != blank %}
                <p class="dv-detail-grid__zutaten-note">{{ organic_note | escape }}</p>
              {% endif %}
            </div>
          {% elsif section.settings.first_ingredients != blank %}
            <div class="dv-detail-grid__zutaten-section">
              <h3 class="dv-detail-grid__zutaten-title">Zutaten</h3>
              <div class="dv-detail-grid__zutaten-content rte">
                {{ section.settings.first_ingredients }}
              </div>
              {% if organic_note != blank %}
                <p class="dv-detail-grid__zutaten-note">{{ organic_note | escape }}</p>
              {% endif %}
            </div>
          {% endif %}
          
          {%- comment -%} ALLERGENE & HINWEISE Section {%- endcomment -%}
          {% if allergens_notes_metafield != blank or section.settings.allergens_notes != blank %}
            <div class="dv-detail-grid__allergens-section">
              <h3 class="dv-detail-grid__allergens-title">Allergene & Hinweise</h3>
              <div class="dv-detail-grid__allergens-content rte">
                {% if allergens_notes_metafield != blank %}
                  {{ allergens_notes_metafield | metafield_tag }}
                {% elsif section.settings.allergens_notes != blank %}
                  {{ section.settings.allergens_notes }}
                {% endif %}
              </div>
            </div>
          {% endif %}
          
          {%- comment -%} Trust Badges (in box at bottom) {%- endcomment -%}
          {% if has_trust_badges %}
            <div class="dv-detail-grid__trust-badges">
              {% for block in section.blocks %}
                {% if block.type == 'trust_badge' %}
                  <div class="dv-detail-grid__trust-badge" {{ block.shopify_attributes }}>
                    {% if block.settings.icon != blank %}
                      <div class="dv-detail-grid__trust-badge-icon">
                        {{ block.settings.icon | image_url: width: 24 | image_tag: alt: block.settings.label, loading: 'lazy', width: 24, height: 24 }}
                      </div>
                    {% endif %}
                    {% if block.settings.label != blank %}
                      <span class="dv-detail-grid__trust-badge-label">{{ block.settings.label | escape }}</span>
                    {% endif %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>
      {% endif %}
      
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "DV Detail Grid",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Heading"
    },
    {
      "type": "text",
      "id": "section_heading",
      "label": "Section Heading",
      "default": "Dein Ritual im Detail",
      "info": "Optional heading displayed above the detail grid (leave empty to hide)"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout_mode",
      "label": "Column Layout",
      "options": [
        {
          "value": "both",
          "label": "Both Columns"
        },
        {
          "value": "left",
          "label": "Left Column Only"
        },
        {
          "value": "right",
          "label": "Right Column Only"
        }
      ],
      "default": "both",
      "info": "Select which columns to display"
    },
    {
      "type": "header",
      "content": "Left Column - Tradition"
    },
    {
      "type": "image_picker",
      "id": "tradition_icon",
      "label": "Tradition Icon",
      "info": "Icon displayed next to tradition title"
    },
    {
      "type": "text",
      "id": "tradition_title",
      "label": "Tradition Title",
      "default": "Tradition in der Ayurveda-Küche",
      "info": "Title for left column. Product metafield custom.dv_detail_left_title takes priority if present."
    },
    {
      "type": "richtext",
      "id": "tradition_body",
      "label": "Tradition Intro Text",
      "info": "Introductory text below title. Product metafield custom.dv_detail_left_body takes priority if present."
    },
    {
      "type": "header",
      "content": "Right Column - Facts"
    },
    {
      "type": "image_picker",
      "id": "facts_icon",
      "label": "Facts Icon",
      "info": "Icon displayed next to facts title"
    },
    {
      "type": "text",
      "id": "facts_title",
      "label": "Facts Title",
      "default": "Zutaten & Fakten",
      "info": "Title for right column. Product metafield custom.dv_facts_title takes priority if present."
    },
    {
      "type": "richtext",
      "id": "first_ingredients",
      "label": "Ingredients List",
      "info": "Ingredients list for ZUTATEN section. Product metafield custom.dv_first_ingredients takes priority if present."
    },
    {
      "type": "text",
      "id": "organic_note",
      "label": "Organic Note Text",
      "default": "*aus kontrolliert biologischem Anbau",
      "info": "Text displayed below ingredients list (e.g., '*aus kontrolliert biologischem Anbau' or '*aus ökologischem Landbau')"
    },
    {
      "type": "richtext",
      "id": "allergens_notes",
      "label": "Allergens & Notes",
      "info": "Content for ALLERGENE & HINWEISE section. Product metafield custom.dv_allergens_notes takes priority if present."
    },
    {
      "type": "checkbox",
      "id": "show_when_empty",
      "label": "Show section even if all markers are empty",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "ingredient_item",
      "name": "Ingredient Item",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Ingredient Icon",
          "info": "Icon for this ingredient (e.g., leaf, flame, lightning bolt)"
        },
        {
          "type": "text",
          "id": "name",
          "label": "Ingredient Name",
          "default": "Kurkuma",
          "info": "Name of the ingredient (e.g., Kurkuma, Maca, Ingwer)"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Ingredient Description",
          "default": "Das \"Gold des Ayurveda\". Wärmend und erdend.",
          "info": "Short description text for this ingredient"
        }
      ]
    },
    {
      "type": "trust_badge",
      "name": "Trust Badge",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Badge Icon",
          "info": "Icon for trust badge (e.g., leaf, flag, box, checkmark)"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Badge Label",
          "default": "BIO-Zertifiziert",
          "info": "Text label for trust badge"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DV Detail Grid",
      "blocks": [
        {
          "type": "ingredient_item",
          "settings": {
            "name": "Kurkuma",
            "description": "Das \"Gold des Ayurveda\". Wärmend und erdend."
          }
        },
        {
          "type": "ingredient_item",
          "settings": {
            "name": "Maca",
            "description": "Traditionell für Ausdauer und Energie."
          }
        },
        {
          "type": "ingredient_item",
          "settings": {
            "name": "Ingwer",
            "description": "Für das innere Feuer (Agni)."
          }
        }
      ]
    }
  ]
}
{% endschema %}
