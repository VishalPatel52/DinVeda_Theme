{% comment %}
  DinVeda Compliance Accordion Section (DV Template)
  Accordion with compliance/legal information
  Uses description markers and blocks (NO metafields)
{% endcomment %}

{%- liquid
  # Read from metafields (priority) or section settings (fallback)
  assign compliance_storage_metafield = product.metafields.custom.dv_compliance_storage
  
  assign compliance_legal_metafield = product.metafields.custom.dv_compliance_legal
  
  # Extract storage text for duplicate detection (use section settings for manipulation)
  assign storage_text_for_detection = section.settings.storage_content
  if compliance_storage_metafield != blank
    # For metafields, we'll render them properly for display, but use section setting for duplicate detection
    # If section setting is empty, we can't do duplicate detection on metafield (too complex)
    assign storage_text_for_detection = section.settings.storage_content
  endif
  
  # Extract legal text for duplicate detection (use section settings for manipulation)
  assign legal_text_for_detection = section.settings.legal_content
  if compliance_legal_metafield != blank
    # For metafields, we'll render them properly for display, but use section setting for duplicate detection
    assign legal_text_for_detection = section.settings.legal_content
  endif
  
  # Normalize storage text for duplicate detection
  assign storage_normalized = storage_text | strip_html | downcase | replace: '.', '' | replace: ',', '' | replace: ' ', '' | strip
  
  # Common storage phrases to detect (normalized)
  assign storage_phrase_1 = 'kühltrockenundlichtgeschütztlagern'
  assign storage_phrase_2 = 'nachdemöffnengutverschließen'
  assign storage_phrase_3 = 'kühllagern'
  assign storage_phrase_4 = 'trockenlagern'
  assign storage_phrase_5 = 'lichtgeschütztlagern'
  
  # Remove duplicate storage instructions from legal content (only works with section settings)
  assign legal_text_cleaned = ''
  assign legal_has_storage_duplicates = false
  assign use_cleaned_legal = false
  
  if storage_text_for_detection != blank and legal_text_for_detection != blank
    # Convert legal text to string for manipulation
    assign legal_text_string = legal_text_for_detection | strip_html | downcase
    
    # Check if legal content contains storage-related phrases
    if legal_text_string contains 'kühl' and legal_text_string contains 'lagern'
      assign legal_has_storage_duplicates = true
      
      # Remove storage-related list items from legal content
      # Split by list items and filter out storage-related ones
      if legal_text_for_detection contains '<li>'
        assign legal_items = legal_text_for_detection | split: '<li>'
        assign cleaned_items = ''
        assign has_valid_items = false
        
        for item in legal_items
          if item != blank and item contains '</li>'
            # Skip the first item if it's just the opening <ul> tag
            assign item_clean = item | split: '</li>' | first | strip
            if item_clean != blank and item_clean != '<ul>' and item_clean != '<ul class="rte">' and item_clean != '<ul class="rte" style'
              assign item_text = item_clean | strip_html | downcase | replace: '.', '' | replace: ',', '' | replace: ' ', '' | strip
              assign is_storage_item = false
              
              # Check if this item matches storage phrases
              if item_text contains 'kühl' and item_text contains 'lagern'
                assign is_storage_item = true
              endif
              if item_text contains 'öffnen' and item_text contains 'verschließen'
                assign is_storage_item = true
              endif
              if item_text contains 'trocken' and item_text contains 'lichtgeschützt' and item_text contains 'lagern'
                assign is_storage_item = true
              endif
              
              unless is_storage_item
                # Get the full item including closing tag
                assign full_item = item | split: '</li>' | first | append: '</li>'
                if cleaned_items == blank
                  assign cleaned_items = full_item
                else
                  assign cleaned_items = cleaned_items | append: full_item
                endif
                assign has_valid_items = true
              endunless
            endif
          endif
        endfor
        
        # Reconstruct legal content without storage items
        if has_valid_items and cleaned_items != blank
          assign legal_text_cleaned = '<ul>' | append: cleaned_items | append: '</ul>'
          assign use_cleaned_legal = true
        endif
      endif
    endif
  endif
  
  # Always show legal content - trust content managers to avoid duplication
  # We remove storage duplicates automatically, but legal content may contain important
  # warnings beyond allergens (pregnancy, age restrictions, etc.) so we always display it
  assign show_legal_content = true
  
  # Check if we have blocks (additional compliance items)
  assign has_blocks = false
  if section.blocks.size > 0
    for block in section.blocks
      if block.type == 'compliance_item'
        assign has_blocks = true
        break
      endif
    endfor
  endif
  
  # Check if we have content to show
  assign has_content = false
  if compliance_storage_metafield != blank or section.settings.storage_content != blank or compliance_legal_metafield != blank or section.settings.legal_content != blank or has_blocks
    assign has_content = true
  endif
-%}

{% if has_content or section.settings.show_when_empty %}
<section
  id="dv-compliance-accordion-{{ section.id }}"
  class="dv-compliance-accordion"
  data-section-id="{{ section.id }}"
  data-section-type="dv-compliance-accordion"
>
  {% style %}
    #dv-compliance-accordion-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  {% endstyle %}
  
  <div class="dv-compliance-accordion__container">
    <details class="details" id="compliance-accordion-{{ section.id }}">
      <summary class="details__summary">
        <h3 class="details__title">{{ section.settings.accordion_title | default: "Wichtige Hinweise & Lagerung" | escape }}</h3>
        <div class="details__icon">
          <span class="material-symbols-outlined">expand_more</span>
        </div>
      </summary>
      <div class="details__content">
        <div class="dv-compliance-accordion__unified-content rte">
          
          {%- comment -%} Unified Storage and Legal Content (duplicates removed) {%- endcomment -%}
          {% assign has_storage = false %}
          {% if compliance_storage_metafield != blank or section.settings.storage_content != blank %}
            {% assign has_storage = true %}
          {% endif %}
          {% assign has_legal = false %}
          {% if show_legal_content %}
            {% if compliance_legal_metafield != blank or section.settings.legal_content != blank %}
              {% assign has_legal = true %}
            {% endif %}
          {% endif %}
          {% if has_storage or has_legal %}
            <div class="dv-compliance-accordion__combined">
              {% if compliance_storage_metafield != blank or section.settings.storage_content != blank %}
                <div class="dv-compliance-accordion__storage">
                  {% if compliance_storage_metafield != blank %}
                    {{ compliance_storage_metafield | metafield_tag }}
                  {% else %}
                    {{ section.settings.storage_content }}
                  {% endif %}
                </div>
              {% endif %}
              
              {% if show_legal_content %}
                {% if use_cleaned_legal and legal_text_cleaned != blank and compliance_legal_metafield == blank %}
                  {%- comment -%} Show cleaned legal content (storage duplicates removed) - only for section settings {%- endcomment -%}
                  <div class="dv-compliance-accordion__legal">
                    {{ legal_text_cleaned }}
                  </div>
                {% else %}
                  {%- comment -%} Show original legal content (metafields always shown, or no duplicates detected) {%- endcomment -%}
                  <div class="dv-compliance-accordion__legal">
                    {% if compliance_legal_metafield != blank %}
                      {{ compliance_legal_metafield | metafield_tag }}
                    {% else %}
                      {{ section.settings.legal_content }}
                    {% endif %}
                  </div>
                {% endif %}
              {% endif %}
            </div>
          {% endif %}
          
          {%- comment -%} Additional items (blocks) {%- endcomment -%}
          {% if has_blocks %}
            {% for block in section.blocks %}
              {% if block.type == 'compliance_item' %}
                <div class="dv-compliance-accordion__item" {{ block.shopify_attributes }}>
                  <h4 class="dv-compliance-accordion__item-title">{{ block.settings.title | escape }}</h4>
                  <div class="dv-compliance-accordion__item-content">
                    {{ block.settings.content }}
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          {% endif %}
          
        </div>
      </div>
    </details>
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "DV Compliance Accordion",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "accordion_title",
      "label": "Accordion Title",
      "default": "Wichtige Hinweise & Lagerung",
      "info": "Title shown in accordion header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (deprecated)",
      "info": "Deprecated - use accordion_title instead"
    },
    {
      "type": "text",
      "id": "storage_label",
      "label": "Storage Label",
      "default": "Lagerung"
    },
    {
      "type": "richtext",
      "id": "storage_content",
      "label": "Storage Content",
      "default": "<p>Kühl, trocken und lichtgeschützt lagern. Nach dem Öffnen gut verschließen.</p>",
      "info": "Used if product.metafields.custom.dv_compliance_storage is empty"
    },
    {
      "type": "text",
      "id": "legal_label",
      "label": "Legal Label",
      "default": "Rechtlicher Hinweis"
    },
    {
      "type": "richtext",
      "id": "legal_content",
      "label": "Legal Content",
      "default": "<ul><li>Kann Spuren von Nüssen, Soja, Senf, Sesam und anderen Saaten enthalten.</li><li>Für Kinder weniger geeignet.</li><li>Nicht empfohlen für Schwangere oder Stillende.</li><li>Bei bekannten Unverträglichkeiten bitte ärztlichen Rat einholen.</li><li>Kühl, trocken und lichtgeschützt lagern.</li><li>Nach dem Öffnen gut verschließen.</li></ul>",
      "info": "Used if product.metafields.custom.dv_compliance_legal is empty"
    },
    {
      "type": "checkbox",
      "id": "show_when_empty",
      "label": "Show section even if all markers are empty",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 24
    }
  ],
  "blocks": [
    {
      "type": "compliance_item",
      "name": "Compliance Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Zutaten & Allergene"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DV Compliance Accordion"
    }
  ]
}
{% endschema %}

