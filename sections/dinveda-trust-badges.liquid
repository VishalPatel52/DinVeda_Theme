{% comment %}
  DinVeda Trust Badges Section
  Premium trust row with 4 badges
{% endcomment %}

<link rel="preload" href="{{ 'section-dinveda-trust-badges.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link rel="stylesheet" href="{{ 'section-dinveda-trust-badges.css' | asset_url }}"></noscript>

<section
  id="dinveda-trust-badges-{{ section.id }}"
  class="dinveda-trust-badges section-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="dinveda-trust-badges"
>
  {%- if section.blocks.size > 0 -%}
    <div class="dinveda-trust-badges__container">
      <div class="dinveda-trust-badges__grid">
        {%- for block in section.blocks -%}
          {%- if block.type == 'trust_badge' -%}
            <div class="dinveda-trust-badges__item" {{ block.shopify_attributes }}>
              {%- if block.settings.icon != blank -%}
                <div class="dinveda-trust-badges__icon">
                  {{ block.settings.icon }}
                </div>
              {%- endif -%}
              {%- if block.settings.label != blank -%}
                <div class="dinveda-trust-badges__label">
                  {{ block.settings.label }}
                </div>
              {%- endif -%}
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  {%- endif -%}
</section>

