{% comment %}
  DinVeda Trust Bullets Section
  Displays 3 fixed trust items below the buy box area
  Simple structure: icon + text for each item
{% endcomment %}

<section
  id="dinveda-trust-bullets-{{ section.id }}"
  class="dinveda-trust-bullets"
  data-section-id="{{ section.id }}"
  data-section-type="dinveda-trust-bullets"
>
  <div class="dinveda-trust-bullets__container">
    <div class="dinveda-trust-bullets__row">
      {%- comment -%} Item 1 {%- endcomment -%}
      <div class="dinveda-trust-bullets__item">
        <div class="dinveda-trust-bullets__icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M11 20A7 7 0 0 1 9.8 6.1C15.5 5 17 4.48 19 2c1 2 2 4.18 2 8 0 5.5-4.78 10-10 10Z" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        {%- liquid
          assign text_1_clean = section.settings.text_1 | default: "100% Bio & vegan – naturrein & laborgeprüft" | strip_html
          assign text_1_clean = text_1_clean | replace: '&amp;', '&' | replace: '&nbsp;', ' '
          assign text_1_clean = text_1_clean | replace: 'data-start=', '' | replace: 'data-end=', ''
          assign text_1_clean = text_1_clean | replace: '"567"', '' | replace: '"615"', ''
          assign text_1_clean = text_1_clean | replace: '567', '' | replace: '615', ''
          assign text_1_clean = text_1_clean | strip
        -%}
        <span class="dinveda-trust-bullets__text">{{ text_1_clean | escape }}</span>
      </div>

      {%- comment -%} Item 2 {%- endcomment -%}
      <div class="dinveda-trust-bullets__item">
        <div class="dinveda-trust-bullets__icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
            <polyline points="9 22 9 12 15 12 15 22" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        {%- liquid
          assign text_2_clean = section.settings.text_2 | default: "Mit Shatavari, Amla, Fenchel & Rosenblüten" | strip_html
          assign text_2_clean = text_2_clean | replace: '&amp;', '&' | replace: '&nbsp;', ' '
          assign text_2_clean = text_2_clean | replace: 'data-start=', '' | replace: 'data-end=', ''
          assign text_2_clean = text_2_clean | replace: '"567"', '' | replace: '"615"', ''
          assign text_2_clean = text_2_clean | replace: '567', '' | replace: '615', ''
          assign text_2_clean = text_2_clean | strip
        -%}
        <span class="dinveda-trust-bullets__text">{{ text_2_clean | escape }}</span>
      </div>

      {%- comment -%} Item 3 {%- endcomment -%}
      <div class="dinveda-trust-bullets__item">
        <div class="dinveda-trust-bullets__icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        {%- liquid
          assign text_3_clean = section.settings.text_3 | default: "Kostenloser Versand ab 50€" | strip_html
          assign text_3_clean = text_3_clean | replace: '&amp;', '&' | replace: '&nbsp;', ' '
          assign text_3_clean = text_3_clean | replace: 'data-start=', '' | replace: 'data-end=', ''
          assign text_3_clean = text_3_clean | replace: '"567"', '' | replace: '"615"', ''
          assign text_3_clean = text_3_clean | replace: '567', '' | replace: '615', ''
          assign text_3_clean = text_3_clean | strip
        -%}
        <span class="dinveda-trust-bullets__text">{{ text_3_clean | escape }}</span>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "DinVeda Trust Bullets",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "text",
      "id": "text_1",
      "label": "Trust Text 1",
      "default": "100% Bio & vegan – naturrein & laborgeprüft"
    },
    {
      "type": "text",
      "id": "text_2",
      "label": "Trust Text 2",
      "default": "Mit Shatavari, Amla, Fenchel & Rosenblüten"
    },
    {
      "type": "text",
      "id": "text_3",
      "label": "Trust Text 3",
      "default": "Kostenloser Versand ab 50€"
    }
  ],
  "presets": [
    {
      "name": "DinVeda Trust Bullets"
    }
  ]
}
{% endschema %}
