{% comment %}
  DinVeda Nutrition Table Section (DV Template)
  Nutrition facts table - uses metafield or section setting
  
  Content Source:
  - Priority: Product metafield (custom.dv_nutrition_table - "DV Nutrition Table")
  - Fallback: Section setting in theme editor (HTML type for direct HTML input)
  
  IMPORTANT - Content Entry in Shopify Admin:
  - DV Nutrition Table (custom.dv_nutrition_table): Multi-line text field - paste HTML table code directly
  - Section setting fallback: HTML type - paste HTML table code directly
  - Metafield takes priority - if metafield has content, section setting is ignored
{% endcomment %}

{%- liquid
  # Get nutrition content from metafield or section setting
  # Uses raw filter to render HTML content from multi-line text metafield
  assign nutrition_content_metafield = product.metafields.custom.dv_nutrition_table
  
  # Check if we have content to show
  assign has_content = false
  if nutrition_content_metafield != blank or section.settings.nutrition_content != blank
    assign has_content = true
  endif
-%}

{% if has_content or section.settings.show_when_empty %}
<section
  id="dv-nutrition-table-{{ section.id }}"
  class="dv-nutrition-table"
  data-section-id="{{ section.id }}"
  data-section-type="dv-nutrition-table"
>
  {% style %}
    #dv-nutrition-table-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  {% endstyle %}
  
  <div class="dv-nutrition-table__container">
    
    {% if section.settings.heading != blank %}
      <h2 class="dv-nutrition-table__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    
    {%- comment -%} Nutrition Table Content
      Priority: Metafield (custom.dv_nutrition_table) - uses raw filter for multi-line text HTML
      Fallback: Section setting (html type) - outputs raw HTML directly
      Metafield takes priority - if metafield has content, section setting is ignored
    {% endcomment -%}
    {% if nutrition_content_metafield != blank %}
      <div class="dv-nutrition-table__content rte">
        {{ nutrition_content_metafield | raw }}
      </div>
    {% elsif section.settings.nutrition_content != blank %}
      <div class="dv-nutrition-table__content rte">
        {{ section.settings.nutrition_content }}
      </div>
    {% endif %}
    
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "DV Nutrition Table",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NÃ¤hrwertangaben (pro 100 g)",
      "info": "Heading for nutrition facts table"
    },
    {
      "type": "html",
      "id": "nutrition_content",
      "label": "Nutrition Table Content",
      "info": "Paste HTML table code here. Used as fallback if product.metafields.custom.dv_nutrition_table (DV Nutrition Table) is empty."
    },
    {
      "type": "checkbox",
      "id": "show_when_empty",
      "label": "Show section even if content is empty",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "DV Nutrition Table"
    }
  ]
}
{% endschema %}

