{% comment %}
  DinVeda Nutrition Table Section (DV Template)
  Nutrition facts table - uses metafield or section setting (NO description markers)
{% endcomment %}

{%- liquid
  # Get nutrition content from metafield or section setting
  assign nutrition_content = product.metafields.dinveda.dv_nutrition_content
  
  if nutrition_content == blank
    assign nutrition_content = section.settings.nutrition_content
  endif
  
  # Check if we have content to show
  assign has_content = false
  if nutrition_content != blank
    assign has_content = true
  endif
-%}

{% if has_content or section.settings.show_when_empty %}
<section
  id="dv-nutrition-table-{{ section.id }}"
  class="dv-nutrition-table"
  data-section-id="{{ section.id }}"
  data-section-type="dv-nutrition-table"
>
  {% style %}
    #dv-nutrition-table-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  {% endstyle %}
  
  <div class="dv-nutrition-table__container">
    
    {% if section.settings.heading != blank %}
      <h2 class="dv-nutrition-table__heading">{{ section.settings.heading | escape }}</h2>
    {% endif %}
    
    {% if nutrition_content != blank %}
      <div class="dv-nutrition-table__content">
        {{ nutrition_content }}
      </div>
    {% endif %}
    
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "DV Nutrition Table",
  "tag": "section",
  "class": "dynamic-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "NÃ¤hrwertangaben (pro 100 g)",
      "info": "Heading for nutrition facts table"
    },
    {
      "type": "richtext",
      "id": "nutrition_content",
      "label": "Nutrition Table Content",
      "info": "Paste HTML table here, or use as fallback if product.metafields.dinveda.dv_nutrition_content is empty"
    },
    {
      "type": "checkbox",
      "id": "show_when_empty",
      "label": "Show section even if content is empty",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "DV Nutrition Table"
    }
  ]
}
{% endschema %}

