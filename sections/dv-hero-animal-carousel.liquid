          "id": "animal_label",
          "label": "Animal label",
          "default": "DEIN KOALA – MOON REST"
        },
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline / Animal-Claim",
          "default": "\"Ich finde Ruhe am Abend\" – sagt der Koala."
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Sanfte Abendrituale für wohlige Entspannung.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "DinVeda Hero",
      "blocks": [
        {
          "type": "animal_slide"
        },
        {
          "type": "animal_slide"
        },
        {
          "type": "animal_slide"
        }
      ]
    }
  ],
  "max_blocks": 7
}
{% endschema %}
