{% layout none %}
{%- liquid
  assign drawer = false
  assign modal = false
  assign page_only = false
  assign no_js_cart = false

  if settings.cart_type == 'drawer'
    assign drawer = true
  elsif settings.cart_type == 'modal_cart'
    assign modal = true
  elsif settings.cart_type == 'page_only'
    assign page_only = true
  else
    assign no_js_cart = true
  endif

  if cart.item_count < 1
    assign isEmpty = ''
    assign formEmpty = 'hide'
  else
    assign isEmpty = 'hide'
    assign formEmpty = ''
  endif

  if settings.cart_type == 'drawer' or settings.cart_type == 'page_only'
    assign is_narrow = 'narrow'
  endif
-%}
<template data-options>
  {
    "item_count": {{ cart.item_count }}
  }
</template>
{%- liquid
  assign empty_message = 'cart.general.empty' | t
  assign button_text = 'cart.general.shop_now' | t
  if button_text == 'cart.general.shop_now'
    assign button_text = 'Jetzt Einkaufen'
  endif
  assign button_link = routes.root_url
-%}
<template data-html="content">
  {% if cart.item_count < 1 %}
    <div class="ajax-cart__empty-cart-wrapper a-center pt6 js-cart-empty {{ isEmpty }}">
      <div class="ajax-cart__empty-cart-content">
        {% comment %} Animal image will be added by JavaScript, or default panda SVG will be shown {% endcomment %}
        <div class="ajax-cart__empty-cart-fox">
          {% comment %} Default panda SVG - will be replaced by JavaScript if custom image exists {% endcomment %}
          <svg class="ajax-cart__empty-cart-fox-img" width="240" height="240" viewBox="0 0 240 240" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Head (white) -->
            <ellipse cx="120" cy="100" rx="55" ry="60" fill="#FFFFFF"/>
            <!-- Left ear (black) -->
            <ellipse cx="85" cy="65" rx="18" ry="22" fill="#000000"/>
            <!-- Right ear (black) -->
            <ellipse cx="155" cy="65" rx="18" ry="22" fill="#000000"/>
            <!-- Left eye patch (black) -->
            <ellipse cx="100" cy="90" rx="16" ry="18" fill="#000000"/>
            <!-- Right eye patch (black) -->
            <ellipse cx="140" cy="90" rx="16" ry="18" fill="#000000"/>
            <!-- Left eye (white highlight) -->
            <circle cx="105" cy="92" r="6" fill="#FFFFFF"/>
            <!-- Right eye (white highlight) -->
            <circle cx="135" cy="92" r="6" fill="#FFFFFF"/>
            <!-- Left eye pupil -->
            <circle cx="107" cy="93" r="3" fill="#8B4513"/>
            <!-- Right eye pupil -->
            <circle cx="137" cy="93" r="3" fill="#8B4513"/>
            <!-- Nose (black) -->
            <ellipse cx="120" cy="108" rx="6" ry="5" fill="#000000"/>
            <!-- Mouth (smile) -->
            <path d="M115 115 Q120 120 125 115" stroke="#000000" stroke-width="2" fill="none" stroke-linecap="round"/>
            <!-- Body (white) -->
            <ellipse cx="120" cy="165" rx="40" ry="45" fill="#FFFFFF"/>
            <!-- Chest/neck band (black) -->
            <ellipse cx="120" cy="145" rx="30" ry="20" fill="#000000"/>
            <!-- Left arm (black) -->
            <ellipse cx="85" cy="150" rx="12" ry="25" fill="#000000" transform="rotate(-20 85 150)"/>
            <!-- Right arm (black) -->
            <ellipse cx="155" cy="150" rx="12" ry="25" fill="#000000" transform="rotate(20 155 150)"/>
          </svg>
        </div>
        <div class="ajax-cart__empty-cart-message-wrapper">
          <p class="ajax-cart__empty-cart-message">{{ empty_message }}</p>
          {% if button_text != blank and button_link != blank %}
            <a href="{{ button_link }}" class="button btn-outline btn-secondary ajax-cart__empty-cart-button">
              {{ button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  {% endif %}
  {% render 'cart-form',
     drawer: drawer,
     modal: modal,
     page_only: page_only,
     no_js_cart: no_js_cart,
     formEmpty: formEmpty,
     is_narrow: is_narrow %}
</template>
